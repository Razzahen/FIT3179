{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 500,
  "title": "GDP Per Capita vs Trust and its Impact On Happiness Score",
  "data": {
    "url": "https://raw.githubusercontent.com/Razzahen/FIT3179/main/2019.csv"
  },
  "params": [
    {
      "name": "Score_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10,
        "step": 0.5,
        "name": "Minimum Score: "
      }
    }
  ],
  "transform": [{"filter": "datum.Score > Score_Above"}],
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": "GDP per capita"
    },
    "y": {
      "field": "Perceptions of corruption",
      "type": "quantitative",
      "title": "Trust in Government"
    }
  },
  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["Country or region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [3, 4, 5, 6, 7, 8],
            "range": [5, 40, 100, 200, 350, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {"field": "Country or region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country or region", "type": "nominal"},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {
            "field": "Perceptions of corruption",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Score", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country or region", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country or region'] == 'China' || datum['Country or region'] =='Singapore' || datum['Country or region'] == 'Australia' || datum['Country or region'] == 'New Zealand' || datum['Country or region'] == 'Italy' || datum['Country or region'] == 'Yemen' ||datum['Country or region'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country or region", "type": "nominal"},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {
            "field": "Perceptions of corruption",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Score", "type": "quantitative", "format": ","},
          {
            "field": "Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}
